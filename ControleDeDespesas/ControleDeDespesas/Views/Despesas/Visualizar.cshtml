@model IList<Modelos.Despesas>
@{
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}


<div class="row">
    <div class="container">
        <table class="table table-bordered table-hover" id="tab1">
            <thead>
                <tr>
                    <th width="80px"><img src="~/Content/Images/Fini-Abriu_XS.png" width="75px" /></th>
                    <th><h5>RDV</h5></th>
                    <th width="30%"><h5>@Model.First().CodigoDespesa</h5></th>
                    <th><h5 class="text-right">Data de inclusão</h5></th>
                    <th><h5 class="text-right">@Model.First().DataInclusao</h5></th>
                </tr>
                <tr>
                    <th><h5>C.C.</h5></th>
                    <td colspan="4"><h5>@Model.First().CentroDeCusto.Descricao</h5></td>
                </tr>
            </thead>
        </table>
        <table class="table table-bordered table-hover" id="despesas">
            <thead>
                <tr>
                    <th>Descrição</th>
                    <th>Quantidade</th>
                    <th>Valor</th>
                    <th>Tipo</th>
                    <th>Data de Inclusão</th>
                    <th>Aprovação</th>
                    <th>Reprovação</th>
                    <th>Motivo da Recusa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@d.Descritivo</td>
                        <td>@d.Quantidade</td>
                        <td>@d.Valor</td>
                        <td>@d.Tipo.Descricao</td>
                        <td>@d.DataInclusao</td>
                        <td>@d.DataAprovacao</td>
                        <td>@d.DataReprovacao</td>
                        <td>@d.MotivoRecusa</td>
                    </tr>
                }
                <tr>
                    <td colspan="6"></td>
                    <td><h6>Total Aprovado</h6></td>
                    <td><h6><div id="total"></div></h6></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="container">    
            @for (int i = 0; i < ViewBag.arquivos.Count; i++)
            {
                <img src="@ViewBag.arquivos[i].FullPathRelativo" class="img-responsive"/>
            }
        <button class="btn btn-default no-print" onclick="imprimir()">Imprimir</button>
    </div>
    </div>



<script>
    function imprimir() {
        window.print();
    }
</script>
<script src="~/Scripts/Visualizar/Visualizar.js"></script>
