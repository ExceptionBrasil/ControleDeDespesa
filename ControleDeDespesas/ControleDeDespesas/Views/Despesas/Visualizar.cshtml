@model IList<ControleDeDespesas.Models.Despesas>
@{
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 col-xs-1 col-sm-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Despesa</th>
                        <th>Descrição</th>
                        <th>Quantidade</th>
                        <th>Valor</th>
                        <th>Tipo</th>
                        <th>Data de Inclusão</th>
                        <th>Aprovação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.CodigoDespesa</td>
                            <td>@d.Descritivo</td>
                            <td>@d.Quantidade</td>
                            <td>@d.Valor</td>
                            <td>@d.Tipo.Descricao</td>
                            <td>@d.DataInclusao</td>
                            <td>@d.DataAprovacao</td>
                        </tr>
                    }
                    <tr></tr>
                </tbody>
            </table>
            <button class="btn btn-default" onclick="myFunction()">Imprimir</button>
        </div>
    </div>
</div>
<script>
function myFunction() {
    window.print();
}
</script>