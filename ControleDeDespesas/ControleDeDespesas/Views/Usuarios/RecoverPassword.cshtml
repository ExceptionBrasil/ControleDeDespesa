@model Modelos.ViewModels.RecoverPasswordModelView

@{
    ViewBag.Title = "RecoverPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <fieldset>
            <legend>Recupere o seu acesso ao sistema</legend>

            @using (Html.BeginForm("RecoverPasswordResult", "Usuarios", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">                  
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email,"Informe seu e-mail", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Recuperar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

        </fieldset>

        <div>
            @Html.ActionLink("Voltar", "Index")
        </div>

    </div>
</div>
