@model IList<Modelos.TiposDeDespesas>


<div id="LoadMenu"></div>

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descrição</th>
                        <th>Valor Fixo</th>
                        <th colspan="2">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tipo in Model)
                    {
                        <tr>
                            <td>@tipo.Id</td>
                            <td>@tipo.Descricao</td>
                            <td>@tipo.ValorFixo</td>
                            <td><a href="@Url.Action("Excluir","TiposDespesas",new { id = tipo.Id})"><i class="glyphicon glyphicon-erase"></i></a></td>
                            <td><a href="@Url.Action("Alterar","TiposDespesas",new { id = tipo.Id})"><i class="glyphicon glyphicon-edit"></i></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts{
    <script>

        // criar a tag  ==>  <div id="LoadMenu"></div> <==  para carregar o menu na página
        var urlGetMenu = "@Url.Action("GetByLocation", "Menu")";
        var urlAprova = "@Url.Action("Aprovar", "Despesas")";
    </script>
    <script src="~/Scripts/Tools/MenuBuilder.Loader.js"></script>

}