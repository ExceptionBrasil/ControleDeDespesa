@model IList<ControleDeDespesas.Models.TiposDeDespesas>

<nav class="navbar">
    <div class="container-fluid">
        <ul class="nav nav-tabs navbar-right">
            <li role="presentation" class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    Opções <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li class="nav-item"><a href="@Url.Action("FormIncluir","TiposDespesas")"><span class="glyphicon glyphicon-hand-right"></span> Novo</a></li>                    
                </ul>
            </li>
        </ul>
    </div>
</nav>
<div class="container container-fluid">
    <fieldset>
        <legend>
            Tipos de Despesas
        </legend>
    </fieldset>
</div>


    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Descrição</th>
                            <th colspan="2">Opções</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tipo in Model)
                        {
                            <tr>
                                <td>@tipo.Id</td>
                                <td>@tipo.Descricao</td>
                                <td><a href="@Url.Action("Excluir","TiposDespesas",new { id = tipo.Id})"><i class="glyphicon glyphicon-erase"></i></a></td>
                                <td><a href="@Url.Action("FormAlterar","TiposDespesas",new { id = tipo.Id})"><i class="glyphicon glyphicon-edit"></i></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


