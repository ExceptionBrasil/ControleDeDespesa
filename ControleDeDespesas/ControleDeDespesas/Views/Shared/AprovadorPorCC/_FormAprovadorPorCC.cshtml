@model Modelos.ViewModels.AprovadorPorCCModelView

<div class="form-horizontal">
    <div class="form-group">
        <div class="col col-sm-4 col-md-6">
            @Html.LabelFor(a => a.CC, "Centro de Custo")
            @Html.DropDownList("CCLista", null, String.Empty, new { @class = "form-control", id = "CC" })

            @Html.LabelFor(a => a.Usuario, "Usuario Aprovador")
            @Html.DropDownList("UsuariosLista", null, String.Empty, new { @class = "form-control", id = "Usuario" })

            @Html.LabelFor(a => a.Superiror, "Superior")
            @Html.DropDownList("SuperiorLista", null, String.Empty, new { @class = "form-control", id = "Superior" })
            

            @Html.LabelFor(a => a.Limite, "Limite de aprovação")
            @Html.TextBoxFor(a => a.Limite, new { @class = "form-control" })

        </div>
    </div>
    <input type="submit" value="Salvar" class="btn btn-default" />
</div>
