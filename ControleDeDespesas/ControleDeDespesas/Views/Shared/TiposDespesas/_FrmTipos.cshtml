@model ControleDeDespesas.Models.TiposDeDespesas

@Html.HiddenFor(t => t.Id)

<div class="form-group">
    @Html.LabelFor(t => t.Descricao, "Descrição")
    @Html.TextBoxFor(t => t.Descricao, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(t => t.ValorFixo, "Valor Fixo")
    @Html.TextBoxFor(t => t.ValorFixo, new { @class = "form-control"})
</div>

<input class="btn btn-primary" type="submit" value="Gravar" />
